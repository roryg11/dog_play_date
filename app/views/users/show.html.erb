<div class="ui segment">
  <a class="ui ribbon label"><%= @user.name %></a>

  <div class="ui small circular image">
    <%= image_tag(@user.avatar) %>
  </div>

  <% if current_user %>
  <div class="ui segment">
    <div class="content" data-user-zipcode="<%= @user.zipcode %>">
      <p><%= @user.email %></p>
      <p><%= @user.zipcode %></p>
      <p><%= @user.age %></p>
      <p><%= @user.gender %></p>
      <p><%= @user.bio %></p>
    </div>
  </div>
  <% end %>

  <% if current_user && current_user.id == @user.id %>
  <div class="ui button">
    <%= link_to "Edit", edit_user_path(@user) %>
  </div>
  <% end %>
</div>

<div class="ui eight wide segment">
  <% if current_user && current_user.id == @user.id  %>
  <a class="ui ribbon label"><%= @user.name %>'s Potential Matches</a>
  <div class="ui segment">
    <p>MATCH</p>
  </div>
  <% end  %>

  <a class="ui ribbon label"><%= @user.name %>'s Dog Preferences</a>
  <div class="ui segment">
    <% @filters.each do |filter| %>
    <%= filter.type %>
    <%= filter.breed %>
    <%= filter.age %>
    <%= filter.gender %>
    <%= filter.play %>
    <%= filter.personality %>
    <% end %>
  </div>

  <% if current_user && current_user.id== @user.id  %>
  <div class="ui button">
    <%= link_to "Change Preferences", new_user_filter_path(@user) %>
  </div>
  <% end %>
</div>


<div class="ui segment">
  <a class="ui ribbon label"><%= @user.name %>'s Dogs</a>
  <% @user.dogs.in_groups(3) do |column_dogs| %>
  <div class="column">
    <% column_dogs.each do |dog| %>
    <% break if dog.nil? %>
    <div class="ui card field">
      <div class="content">
        <div class="header" data-dog-id ="<%= dog.id %>">
          <div class="ui avatar image">
            <%= image_tag(dog.image) %>
          </div>
          <%= dog.name %>
        </div>
        <div class="description">
          <%= dog.bio %>
        </div>
      </div>

      <div class="ui bottom attached segment">
        <% if current_user && current_user.id == @user.id %>
        <div class="ui inverted teal button">
          <%= link_to "Edit", edit_dog_path(dog) %>
        </div>
        <div class="ui button">
          <%= link_to 'Delete Dog', dog_path(dog), method: :delete, data: {confirm: "Are you sure?"}  %>
        </div>
        <% end %>
        <% end %>
      </div>
    </div>
    <div class ="one wide field"></div>
  </div>
  <% end %>
</div>

<% if current_user && current_user.id == @user.id %>
<div class="column padding">
  <div class="ui teal inverted button">
    <%= link_to "Add Dog", new_dog_path %>
  </div>
</div>
<% end %>

<div class="header">
  <h3>Dog Parks in Your Area</h3>
</div>

<div class="ui segment two column grid">
  <div class="column">
    <div id="map-canvas" style="width: 300px; height: 300px;"></div>
  </div>
  <div class="column">
    <div class="ui divided list" id="map-segment">
    </div>
  </div>
</div>

<script charset="utf-8" id="dog-modal" text="text/x-handlebars-template">
<div class="ui modal">
  <i class="close icon"></i>
  <div class="header">{{name}}</div>
  <div class="content">
    <div class="ui medium circular image">
      <img src ={{image}}>
    </div>
    <div class="description">
      <h3>A Little Bit About Me</h3>
      <p>{{bio}}</p>
      <ul>
        <li>Breed:{{breed}}</li>
        <li>Gender: {{gender}}</li>
        <li>Play Type:{{play}}</li>
        <li>Personality Type: {{personality}}</li>
      </ul>
    </div>
  </div>
  <div class="actions">
    <div class="ui button">OK</div>
  </div>
</div>
</script>
