<h1>Preferences</h1>

<div class="ui form segment" id="new-filter-form">
  <%= form_for([@user, @filter]) do |f| %>

  <%= render 'shared/errors', object: @filter %>

  <div class="three fields">
    <div class="field">
      <label>Gender</label>
      <div class="ui selection dropdown">
        <div class="default text">Gender</div>
        <i class="dropdown icon"></i>
        <input id="new-filter-gender" name="filter[gender]" type="hidden">
        <div class="menu">
          <div class="item" data-value="Female">Female</div>
          <div class="item" data-value="Male">Male</div>
        </div>
      </div>
    </div>
    <div class="field">
      <label>Size</label>
      <div class="ui selection dropdown">
        <div class="default text">Size</div>
        <i class="dropdown icon"></i>
        <input id="new-filter-size" name="filter[size]" type="hidden">
        <div class="menu">
          <div class="item" data-value="Small">Small</div>
          <div class="item" data-value="Medium">Medium</div>
          <div class="item" data-value="Large">Large</div>
          <div class="item" data-value="Extra Large">Extra Large</div>
        </div>
      </div>
    </div>

    <div class="field">
      <label>Play</label>
      <div class="ui selection dropdown">
        <div class="default text">Play</div>
        <i class="dropdown icon"></i>
        <input id="new-filter-play" name="filter[play]" type="hidden">
        <div class="menu">
          <div class="item" data-value="toy-oriented">Toy-Oriented</div>
          <div class="item" data-value="Food-Oriented">Food-Oriented</div>
          <div class="item" data-value="Tag/Wrestling-Oriented">Tag/Wrestling-Oriented</div>
        </div>
      </div>
    </div>
  </div>


  <div id="two fields">
    <div class="field">
      <label>Personality</label>
      <div class="ui selection dropdown">
        <div class="default text">Personality</div>
        <i class="dropdown icon"></i>
        <input id="new-filter-personality" name="filter[personality]" type="hidden">
        <div class="menu">
          <div class="item" data-value="submissive">Submissive</div>
          <div class="item" data-value="Dominant">Dominant</div>
        </div>
      </div>
    </div>
  </div>

  <div class="two fields">
    <div class="field">
      <%= f.label "breed" %>
      <div class="field">
        <%= f.text_field :breed %>
      </div>
    </div>

    <div class="field">
      <%= f.submit "Submit Preferences", class: "ui submit button"  %>
    </div>
  </div>
  <% end %>
</div>
